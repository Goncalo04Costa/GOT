<style>
    .box {
        max-width: 352px;
        height: 245px;
        background: #E8F2F3;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 8px;
        padding: 16px;
    }


    .box-img {
        width: 320px;
        height: 128px;
        border-radius: 8px;
    }


    .box-title {
        width: 126px;
        font-family: "Poppins";
        font-size: 24px;
        white-space: nowrap;
        letter-spacing: 0;
        color: #272E2E;
        text-align: left;
        align-self: flex-start;
        font-weight: 500;
    }


    .box-text {
        width: 328px;
        height: 36px;
        margin-top: 8px;
        font-family: "Sora";
        font-size: 14px;
        letter-spacing: 0;
        color: #414D4D;
        text-align: left;
        align-self: flex-start;
        font-weight: 500;
    }


</style>


<div class="box">
    <a href="@Destino">
        <img src="@LinkImagem" alt="@NomeImagem" class="box-img" style="border-radius: 8px">
    </a>
    <h2 class="box-title">@TituloBox </h2>
    <p class="box-text">@TextoBox</p>
</div>

@code
{
    [Parameter]
    public string TituloBox  { get; set; }
    [Parameter]
    public string TextoBox { get; set; }
    [Parameter]
    public string Destino { get; set; }
    [Parameter]
    public string LinkImagem { get; set; }
    [Parameter]
    public string NomeImagem{ get; set; }
}