@using Blazored.SessionStorage
@inject ISessionStorageService SessionStorage

<style>
    .aviso {
        height: 32px;
        background: #0D3439;
        display: flex;
        align-items: center;
        padding: 0 140px;
        justify-content: center;
    }


    .textoaviso {
        font-family: "Poppins";
        font-size: 16px;
        font-weight: 400;
        color: #ffffff !important;
        text-decoration: underline white;
        display: flex;
        justify-content: center;
        width: calc(100% - 24px);
    }

    .fechar-aviso {
        margin-left: auto;
        cursor: pointer;
        color: white;
        font-size: 16px;
    }

    @@media (max-width: 1024px) {
        .aviso {
            height: 32px;
            background: #0D3439;
            display: flex;
            align-items: center;
            padding: 0 40px;
            justify-content: center;
        }
    }

    @@media (max-widht: 768) {

    }

    
</style>
   
@if (AvisoVisivel)
{
    <div class="aviso">
        <a href="https://inforcavado.com" class="textoaviso" target="_blank">
            Publicidade ou avisos importantes para cliente
        </a>
        <span class="material-symbols-outlined" style="color:white; " @onclick="EsconderAviso">
            close
        </span>
    </div>
}



<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined">



@code {
    private bool AvisoVisivel = true;

    protected override async Task OnInitializedAsync()
    {
        var avisoOculto = await SessionStorage.GetItemAsync<bool>("avisoOculto");
        AvisoVisivel = !avisoOculto;
    }

    private async Task EsconderAviso()
    {
        AvisoVisivel = false;
        await SessionStorage.SetItemAsync("avisoOculto", true);
    }
}
