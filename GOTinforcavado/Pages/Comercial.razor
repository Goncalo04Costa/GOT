@page "/Comercial"
@using GOTinforcavado.Auxiliar


<Cabecalho imagem="true" />

<div class="ApoioPage">

    <div class="container-boxes">
        <div class="header-line1">
            <a href="/" style="text-decoration:none">
                <p class="TextosAnteriores">
                    Inicio >
                </p>
            </a>

            <p class="TextoAtual">
                Comercial
            </p>
        </div>

        <div class="header-line2">
            <a href="/">
                <div class="SetaTras">
                    <span class="material-symbols-outlined">
                        arrow_back
                    </span>
                </div>
            </a>
            <div class="TituloPagina">
                Comercial
            </div>
        </div>
        <div class="boxes">
            @foreach (var box in ListaBoxes)
            {
                <ZonaEscolha TituloBox="@box.Titulo"
                             TextoBox="@box.Descricao"
                             Destino="@box.Link"
                             LinkImagem="@box.Imagem"
                             NomeImagem="@box.AltImagem" />
            }
        </div>
    </div>

</div>
<ChatBot />
<Rodape />
<Cookies />


@code {

    List<Boxes> ListaBoxes = new List<Boxes>();

    protected override void OnInitialized()
    {

        ListaBoxes.Add(new Boxes(
            "PROtextil®",
            "ERP para a Indústria Têxtil.",
            "/Formulario/Comercial/PROtextil",
            "/imagens/Protextil- Prioritário Horizontal Cores (positivo).svg",
            "Imagem de PROTextil"
        ));
        ListaBoxes.Add(new Boxes(
            "ATOMgest®",
             "Software de gestão comercial",
            "/Formulario/Comercial/ATOMgest",
            "/imagens/atomgest- Prioritária Horizontal Cores (positiva.svg",
            "Imagem do ATOMgest"
        ));

        ListaBoxes.Add(new Boxes(
         "IT",
          "Suporte a vendas, orçamentos e propostas.",
         "/Formulario/Comercial/Headline",
         "/imagens/it.PNG",
         "Imagem de Headline"
     ));
        ListaBoxes.Add(new Boxes(
            "Outros",
            "Outras questões comerciais.",
            "/Formulario/Comercial/Financeiro",
            "/imagens/outros.png",
            "Imagem de outros"
        ));


    }


}

