@code {

    List<Boxes> ListaBoxes = new List<Boxes>();

    protected override void OnInitialized()
    {

        ListaBoxes.Add(new Boxes(
            "Apoio ao Cliente",
            "Ajuda e suporte aos softwares Inforcávado e área de TI e administração de redes.",
            "/Apoio",
            "/imagens/default.png",
            "Imagem de Apoio"
        ));
        ListaBoxes.Add(new Boxes(
            "Comercial",
            "Questões comerciais, licenças, orçamentos, formações e Implementações de software.",
            "/Comercial",
            "/imagens/default.png",
            "Imagem de Comercial"
        ));

        
    }

    private bool AvisoVisivel = true;

    protected override async Task OnInitializedAsync()
    {
        var avisoOculto = await SessionStorage.GetItemAsync<bool>("avisoOculto");
        AvisoVisivel = !avisoOculto;
    }

    private async Task EsconderAviso()
    {
        AvisoVisivel = false;
        await SessionStorage.SetItemAsync("avisoOculto", true);
    }
    
}

